    <%= f.text_field :title %>
    </div>
    </div>

      <div class="control-group">
    <%= f.label :undertitel %>
        <div class="controls">
    <%= f.text_field :undertitel %>
      </div>
    </div>


    <div class="control-group">
      <%= f.label :abstrakt, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :abstrakt, :class => 'text_area' %>
      </div>
    </div>



    <div class="control-group">
    <%= f.label :forfatter  %>
      <div class="controls">
    <%= f.text_field :forfatter %>
    </div>
      </div>

    <div class="control-group">
    <%= f.label :afleveringsaar %>
      <div class="controls">
    <%= f.text_field :afleveringsaar %>
    </div>
    </div>

    <div class="control-group">
    <%= f.label :studium %>
      <div class="controls">
    <%= f.text_field :studium %>
    </div>
    </div>



    <% if @paper.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@paper.errors.count, "error") %> prohibited this paper from being saved:</h2>

      <ul>
      <% @paper.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  papers_path, :class => 'btn' %>
    </div>
<% end %>
